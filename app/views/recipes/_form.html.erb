
<%= form_for(@recipe) do |f| %>

<% if @recipe.errors.any? %>

  <h4><%= pluralize(@recipe.errors.count, "error") %> prohibited this recipe from being saved:</h4>
    <ul>
      <% @recipe.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
    <% end %>

    <%= f.label :name, "Recipe Name" %>
    <%= f.text_field :name %>

    <%= f.label :cook_time %>
    <%= f.text_field :cook_time %>

    <%= f.label :directions %>
    <%= f.text_area :directions, rows: 15 %>

    
    
<ol>
    <h3>Ingredients</h3>
    <p> <%= f.collection_select :ingredient_ids, Ingredient.order('name ASC').all, :id, :name, include_blank: 'Select Ingredeint' %> </p>
    <%= f.fields_for :ingredients do |ingredients_fields| %>
      <br> Name <%= ingredients_fields.text_field :name %>
      <% end %> 
      <% f.fields_for :recipe_ingredients do |recipe_ingredients_attr| %> 
        <br> Quantity <%= recipe_ingredients_attr.text_field :quantity %>

     <% end %>
      
     
      

    <%= f.submit 'Submit'  %>
<% end %>