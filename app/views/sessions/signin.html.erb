<%= render 'shared/page_title', title: 'Login' %>


<% if flash[:error] %> 
<%= flash[:error] %> 
<% end %> 

<%= form_for(@user, url: "signin") do |f| %> 
    <div class="form-group"> 
    <%= f.label :name %> 
    <%= f.text_field :name %> 
    <%= f.label :email %> 
    <%= f.text_field :email %> 
    <%= f.label  :password %> 
    <%= f.text_field :password %> 
    <%= f.submit "signin" %> 
    <% end %> 
