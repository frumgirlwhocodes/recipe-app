
<%= render 'shared/page_title', title: "Create a New User to start" %> 

<% if !@user.errors.empty? %>
	<ul>
		<% @user.errors.full_messages.each do |error|%>
			<li><%= error %></li>
		<% end %>
	</ul>
<% end %>

<%= form_for(@user) do |f| %> 
    <%= f.label :name %>
        <%= f.text_field :name %>

        <%= f.label :email %>
        <%= f.email_field :email %>

        <%= f.label :password %>
        <%= f.password_field :password_digest %>

        <%= f.submit "Register New User", class: 'btn btn-success' %> 
        <% end %> 